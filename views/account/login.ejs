<%# Content Heading %>
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<form action="success" method="post">
    <label for="account_email">Email: </label>
    <input type="email" name="account_email" id="account_email" required><br>
    <label for="account_password">Password: </label>
    <input type="password" name="account_password" id="account_password" required>
    <span> * Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span><br>
    <input type="submit" value="Login"> 
    <p>No account? <a href="/account/register">Sign-up</a></p>
</form>