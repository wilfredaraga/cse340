<%# Content Heading %>
<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/account/register" method="post">
    <label for="account_firstname">First Name: </label>
    <input type="text" name="account_firstname" id="account_firstname" required><br>
    <label for="account_lastname">Last Name: </label>
    <input type="text" name="account_lastname" id="account_lastname" required><br>
    <label for="account_email">Email: </label>
    <input type="email" name="account_email" id="account_email" required placeholder="Enter a valid email address"><br>
    <label for="account_password">Password: </label>
    <input type="password" name="account_password" id="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
    <span> * Passwords must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span><br>
    <input type="submit" value="Register">
</form>