<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<form action="/inv/edit" method="post" id="editForm">
    <label for="inv_make">Make: </label>
    <input type="text" name="inv_make" id="inv_make" required value="<%= locals.inv_make %>"><br>
    <label for="inv_model">Model: </label>
    <input type="text" name="inv_model" id="inv_model" required value="<%= locals.inv_model %>"><br>
    <label for="inv_year">Year: </label>
    <input type="number" name="inv_year" id="inv_year" required min="1886" max="2025" value="<%= locals.inv_year %>"><br>
    <label for="inv_description">Description: </label>
    <textarea name="inv_description" id="inv_description" required><%= locals.inv_description %></textarea><br>
    <label for="inv_image">Image: </label>
    <input type="text" name="inv_image" id="inv_image" required value="<%= locals.inv_image%>"><br>
    <label for="inv_thumbnail">Thumbnail: </label>
    <input type="text" name="inv_thumbnail" id="inv_thumbnail" required value="<%= locals.inv_thumbnail %>"><br>
    <label for="inv_price">Price: </label>
    <input type="number" name="inv_price" id="inv_price" value="<%= locals.inv_price %>"><br>
    <label for="inv_miles">Miles: </label>
    <input type="number" name="inv_miles" id="inv_miles" value="<%= locals.inv_miles %>"><br>
    <label for="inv_color">Color: </label>
    <input type="text" name="inv_color" id="inv_color" required value="<%= locals.inv_color %>"><br>
    <label for="classificationList">Classification: </label>
    <%- classList %><br>
    <input type="submit" value="Edit Inventory" disabled>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
</form>

<script src="/js/inv-update.js"></script>